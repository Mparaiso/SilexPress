{% extends app['sp.core.template.front.layout']  %}
{% block content %}
    <div class="span12">
        <h2>{{ post.getPostTitle() }}</h2>

        <h1>&nbsp;</h1>

        <p class="author">
            <i class="icon-user"></i>
            <small>
                {% set username = app.user_manager.getById(article.user_id).username %}
                <a href="{#{path('article.getbyusername',{username: username})}#}">{{ username }}</a>
                |
                <i class="icon-calendar"></i>
                {{ article.created_at.sec|date('m/d/Y') }}
                |
                <i class="icon-comment"></i><a
                        href='#comments'>{{ app['comment_manager'].getCommentsByArticleId(article._id)|length }}
                    Comments</a></small>
        </p>
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            {% set user = app['user_manager'].getUser() %}
            {% if app['article_manager'].belongsTo(article._id,user._id) %}
                <a class='btn btn-small' href="{{ path('admin.article.edit',{id: article._id}) }}">Edit</a>
            {% endif %}
        {% endif %}
        <div>
            {% autoescape false %}
            {{ post.post_content|striptags(app['silexblog.config.allowedTags']) }}
            {% endautoescape %}
        </div>
        <hr/>
        <div class='row-fluid'>
            {% if post.tags %}
                {% include 'silexpress/front/post/tags/index.twig' with {tags: post.tags} only %}
            {% endif %}
        </div>
        <hr/>
        <a name='comments'></a>
        {#@note @silex render a controller in twig #}
        <div>{{ render(path("comment.index",{'article_id': post._id})) }}</div>
        <div>{{ render(path("comment.create",{'article_id': post._id})) }}</div>
    </div>
{% endblock %}