{{ form_widget(form) }}
<script type="text/javascript" src='{{ app.request.getUriForPath('/vendor/tiny_mce/tiny_mce.js') }}'></script>
<script type="text/javascript">
    tinyMCE.init({
        content_css: "{{app.request.getUriForPath('/vendor/bootstrap/css/bootstrap.css')}}",
        mode: "textareas",
        theme: "advanced",
        // see http://stackoverflow.com/questions/6878362/symfony2-tinymcebundle
        setup: function (ed) {
            ed.onChange.add(function (ed, l) {
                tinyMCE.activeEditor.getElement().value = tinyMCE.activeEditor.getContent();
            })
        }
    });
</script>