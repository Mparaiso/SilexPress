<!-- flash messages -->
<div class="row">
    {% if app.session.flashBag.peekAll() |length > 0 %}
        {% for type,messages in app.session.flashBag %}
            {% for message in messages %}
                <div class="alert alert-{{ type }}">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    {% endif %}
</div>